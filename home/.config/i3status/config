# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = '#eeeeee'
        interval = 1
}

order += cpu_usage
order += "load"
order += "sysdata"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
# order += mpris
order += spotify
order += "volume master"
order += "battery_level"
order += "tztime date"
order += "tztime time"

wireless _first_ {
        format_up = "W:%quality at %essid"
        format_down = ""
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = ""
}

battery_level {
    battery_id = all
    format = "Batt: {percent}% {time_remaining}"
    hide_seconds = True
    cache_timeout = 5
    notify_low_level = True
    threshold_degraded = 20
    threshold_bad = 10
    measurement_mode = sys
}

tztime date {
        format = " %D wk:%U "
}

tztime time {
        format = " %I:%M:%S %p %Z "
}

cpu_usage {
        format = "CPU: %usage"
}

load {
        format = "Load: %1min"
}

disk "/" {
        format = "Disk: %avail"
}

volume master {
        format = "Vol: %volume"
        format_muted = "Volume: M (%volume)"
        device = "pulse"
}

sysdata {
    format = "Mem: {mem_used_percent}%"
}

spotify {
    format = "'{title}' by {artist}"
    format_down = ""
    format_stopped = ""
    color_good = "#00FF00"
}

mpris {
    format = "{player}: [['{title}' by {artist}]|[{title}]]"
    format_none = ""
    color_good = "#00FF00"
}
